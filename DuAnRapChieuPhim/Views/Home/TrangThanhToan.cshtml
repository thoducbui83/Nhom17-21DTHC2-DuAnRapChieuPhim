                        </tr>
                        <tr>
                            <td style="background-color:antiquewhite">Giảm giá theo hạng:</td>
                            <td style="background-color:antiquewhite">
                                <span id="currentDiemThuong" class="badge badge-warning">
                                    @if (hang == "VIP")
                                    {
                                        <span>GIẢM GIÁ 7%</span>
                                    }
                                    else if (hang == "VVIP")
                                    {
                                        <span>GIẢM GIÁ 10%</span>
                                    }
                                    else

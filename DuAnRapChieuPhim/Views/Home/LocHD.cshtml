@model IPagedList<DuAnRapChieuPhim.Models.HoaDon>
@using PagedList
@using PagedList.Mvc
@{
    ViewBag.Title = "Ve";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12 text-center">
            <h2>Danh sách hóa đơn</h2>
            <form action="@Url.Action("LocHD", "Home")" method="get" class="filter-form">
                <div class="form-row align-items-center">
                    <div class="col-auto">

                        <input type="date" class="form-control" id="ngayDat" name="ngayDat">
                    </div>
                    <div class="col-auto">
                        <button type="submit" style="width:100px" class="btn btn-primary">Lọc</button>
                    </div>
                </div>
            </form>
        </div>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">Họ Tên</th>
                    <th scope="col">Số Điện Thoại</th>
                    <th scope="col">Email</th>
                    <th scope="col">Mã KH</th>
                    <th scope="col">Trạng Thái</th>
                    <th scope="col">Tiền Vé</th>
                    <th scope="col">Tiền Combo</th>
                    <th scope="col">Tổng Tiền</th>
                    <th scope="col">Ngày Đặt</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Count == 0)
                {
                    <tr>
                        <td colspan="9">Không có dữ liệu</td>
                    </tr>
                }
                else
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.HoTen</td>
                            <td>@item.SoDienThoai</td>
                            <td>@item.Email</td>
                            <td>@item.MaKH</td>
                            <td>@item.TrangThai</td>
                            <td>@item.TienVe</td>
                            <td>@item.TienCombo</td>
                            <td>@item.TongTien</td>
                            <td>@item.NgayDat.Value.ToString("dd/MM/yyyy")</td>
                            <td>
                                <form action="@Url.Action("DetailsHD", new { id = item.MaHoaDon })" method="get" class="details-form">
                                    <button type="submit" class="details-button">Details</button>
                                </form>
                            </td>
                        </tr>
                    }
                    if (Model.Count < 9)
                    {
                        for (int i = 0; i < 9 - Model.Count; i++)
                        {
                            <tr>
                                <td colspan="10">&nbsp;</td>
                            </tr>
                        }
                    }
                }
            </tbody>
        </table>
        <div class="text-center">
            @Html.PagedListPager(Model, page => Url.Action("LocHD", new { page }), new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
        </div>
    </div>
</div>


<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background-color: #000;
        color: white;
        font-family: Arial, sans-serif;
    }


    .container {
        max-width: 800px;
        margin: 0 auto;
    }

 
    h2 {
        text-align: center;
        margin-bottom: 30px;
    }


    .filter-form {
        text-align: center;
        margin-bottom: 20px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    .form-control {
        width: 200px;
        margin-right: 10px;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: #333;
        color: white;
    }

    .btn-primary {
        padding: 8px 16px;
        border: none;
        border-radius: 4px;
        background-color: #007bff;
        color: white;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .table {
        width: 100%;
        background-color: rgba(255, 255, 255, 0.05);
        border-radius: 0.25rem;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    }

        .table th,
        .table td {
            padding: 10px;
            text-align: center;
        }

        .table tbody tr:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

    .text-center {
        text-align: center;
        margin-top: 20px;
    }

    .pagination {
        display: inline-block;
    }

        .pagination a {
            color: white;
            padding: 8px 16px;
            margin: 0 2px;
            border: 1px solid #fff;
            border-radius: 4px;
            transition: background-color 0.3s, color 0.3s;
        }

            .pagination a:hover {
                background-color: rgba(255, 255, 255, 0.1);
                color: #17a2b8;
            }

        .pagination .active a {
            background-color: #17a2b8;
            border-color: #17a2b8;
        }

        .pagination .disabled a,
        .pagination .disabled a:hover {
            background-color: transparent;
            cursor: not-allowed;
        }

    .heading-wrapper {
        text-align: center;
        margin-bottom: 30px;
    }

    .filter-form {
        text-align: center;
        margin-bottom: 20px;
    }

    .container {
        max-width: 800px;
        margin: 0 auto;
    }

    .details-form {
        display: inline-block; 
        margin: 0; 
    }

    .details-button {
        width: 100px; 
        padding: 8px 16px; 
        border: none; 
        border-radius: 4px; 
        background-color: #007bff; 
        color: white; 
        font-size: 14px; 
        font-weight: bold; 
        text-transform: uppercase; 
        cursor: pointer; 
        transition: background-color 0.3s, color 0.3s; 
    }

        .details-button:hover {
            background-color: #0056b3; 
        }
</style>

